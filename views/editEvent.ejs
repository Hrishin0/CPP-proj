<!-- edit-event.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Event</title>
  <!-- Include necessary CSS and JavaScript -->
</head>
<style>
  body {
    font-family: sans-serif;
    margin-top: 10vh;
    padding: 20px;
    font-size: 2vh;
  }

  .container {
    max-width: 500px;
    margin: 0 auto;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 5px;
  }

  h1 {
    text-align: center;
    margin-bottom: 20px;
  }

  label {
    display: block;
    margin-bottom: 5px;
  }

  input[type="text"],
  input[type="submit"] {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 3px;
  }

  input[type="submit"] {
    color: white;
    cursor: pointer;
  }
</style>
<body>
  <div class="container">
    <h1>Edit Event</h1>
    <form action="/events/update/<%= event.id %>" method="POST">
      <!-- Input fields to update event details -->
      <label for="eventName">Event Name:</label>
      <input type="text" id="eventName" name="eventName" value="<%= event.eventName %>" required>
      <label for="eventDescripton" style="margin-top: 30px;">Event Description:</label>
      <input type="text" id="placeholder" name="placeholder" value="<%= event.placeholder %>" required>
      
      
      <button type="submit" style="margin-top: 30px;">Update Event</button>
    </form>
  </div>
</body>
</html>
